<?xml version="1.0"?>
<launch>
  <arg name="scan_topic" default="/scan"/>
  <arg name="cmd_vel_topic" default="/hoverboard_velocity_controller/cmd_vel"/>
  <arg name="odom_topic" default="/odom_combined"/>

  <!-- Alternative global planners, default is NavfnROS: -->
  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <!-- <arg name="base_global_planner" default="srv_client_plugin/SrvClientPlugin"/> -->
  <!-- Alternatif local planners, default is base local planner -->
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)"/>

    <!-- Comment below code to use Dijkstra Only -->
    <param name="base_local_planner" value="$(arg base_local_planner)"/>

    <!-- Costmap params -->
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/common_costmap.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/common_costmap.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/global_costmap.yaml" command="load" />
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/local_costmap.yaml" command="load" />

    <!-- Planner -->
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/move_base.yaml" command="load"/>
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/global_planner.yaml" command="load"/>
    <rosparam file="$(find autonomous_mobile_robot_navigation)/param/local_planner.yaml" command="load"/>

    <!-- Remap possition -->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg scan_topic)"/>

  </node>

</launch>
